extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-green
                h3 Gestão de Tarefas
            .w3-container
                form.w3-container(action='/tarefa' method='POST')
                    label
                        b Tarefa
                    input.w3-input.w3-border.w3-pale-green(type='text' name='nome')
                    label
                        b Data limite
                    input.w3-input.w3-border.w3-pale-green(type='date' name='data')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
                    hr
            header.w3-container.w3-green
                h3 Lista de Tarefas 
            .w3-container
                table.w3-table.w3-striped
                    tr
                        th Tarefa
                        th Data limite
                    each al in lista
                        tr
                            td= al.nome
                            td= al.data
            footer.w3-container.w3-pale-green
                address Gerado por Gestão de Tarefas App