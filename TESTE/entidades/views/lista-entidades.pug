extends layout

block content
  .w3-container.w3-section
    .w3-card-4
      header.w3-container.w3-blue
        h1 Lista de entidades
    w3.container
      table.w3-table-all.w3-section
          tr
              th Estado
              th Sigla
              th SIOE
              th Designação
              th Internacional
              th Página da entidade
          each e in lista
              tr
                  td=e.estado
                  td=e.sigla
                  td=e.sioe
                  td=e.designacao
                  td=e.internacional
                  td
                      button.w3-button.w3-blue-grey(onclick="window.location.assign('/" + e.id + "')" class="fa fa-external-link")
